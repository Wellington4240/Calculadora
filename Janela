package Interface;

import java.awt.Color;
import java.awt.Font;

import javax.swing.JButton;
import javax.swing.JFrame;

class Janela extends JFrame {

	public static void main(String[] args) {
		new Janela();
	}
	
	private static final long serialVersionUID = 1L;

	public Janela() {
//		Configuração da janela
		setTitle("Calculadora-W");
		setVisible(true);
		setSize(400, 400);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setVisible(true);
		setLocationRelativeTo(null);
		setLayout(null);
		
//		configuração dos botões
		JButton jButton = new JButton();
		jButton.setBounds(40, 50, 60, 40);
		jButton.setText("1");
		
		String[] numero = {"Botão 1, Botão 2, Botão 3, Botão 4"};
		
		for(String botao : numero) {
			JButton Numeros1 = new JButton(botao);
			jButton.add(Numeros1);
		}
		
		Font fonte = (new Font("Arial", Font.BOLD, 20));
		jButton.setFont(fonte);
		
		
		jButton.setForeground(new Color(237, 241, 238));
		jButton.setBackground(new Color(9, 10, 9));
		
		add(jButton);
	}
	
}
